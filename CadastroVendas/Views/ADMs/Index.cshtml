@model IEnumerable<CadastroVendas.Models.ADM>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ADMName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ADMName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ADMId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ADMId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ADMId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
