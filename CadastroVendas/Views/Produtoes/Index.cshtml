@model IEnumerable<CadastroVendas.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-warning"><i class="bi bi-plus-square"></i> Adicionar Novo Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoUnidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoUnidade)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoID" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ProdutoID" class="btn btn-secondary"><i class="bi bi-card-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.ProdutoID" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
